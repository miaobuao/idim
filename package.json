{
  "name": "idim",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@8.15.3",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "dotenv -e .env.devel -- turbo dev",
    "lint": "turbo lint",
    "lint-staged": "lint-staged",
    "type-check": "turbo type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "db:migrate:dev": "cd packages/db && pnpm migrate && wrangler d1 migrations apply --local idim",
    "db:migrate:prev": "wrangler d1 migrations apply idim-prev",
    "db:migrate:prod": "wrangler d1 migrations apply idim-prod",
    "db:studio:dev": "cd packages/db && pnpm dev:studio",
    "db:studio:prod": "cd packages/db && pnpm prod:studio",
    "preview": "NITRO_PRESET=cloudflare-pages pnpm build && cd apps/web && wrangler pages dev dist"
  },
  "dependencies": {
    "lodash-es": "^4.17.21",
    "sass": "^1.71.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.7.0",
    "@repo/typescript-config": "workspace:*",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.25",
    "@unocss/eslint-plugin": "^0.58.5",
    "dotenv-cli": "latest",
    "drizzle-kit": "^0.20.14",
    "drizzle-orm": "^0.29.4",
    "eslint": "^8.57.0",
    "eslint-config-turbo": "^1.12.4",
    "eslint-plugin-format": "^0.1.0",
    "fp-ts": "^2.16.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "turbo": "latest",
    "typescript": "^5.3.3",
    "unocss": "^0.58.5",
    "wrangler": "^3.30.1"
  }
}
